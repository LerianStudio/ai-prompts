# Server Configuration
NODE_ENV=development
HOST=127.0.0.1
PORT=3020

# Database Configuration  
DB_PATH=../../../infrastructure/data/databases/task-management.db

# Request Limits
API_REQUEST_LIMIT=1mb
REQUEST_TIMEOUT_MS=30000

# CORS Configuration (comma-separated list)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3020,http://127.0.0.1:5173,http://127.0.0.1:3020

# WebSocket Configuration
WS_CLIENT_TIMEOUT_MS=30000
WS_PING_INTERVAL_MS=30000

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=../../../infrastructure/data/logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS_LOGGING=true
ERROR_STACK_IN_RESPONSE=false