{
  "name": "lerian-protocol",
  "version": "0.1.0",
  "description": "Lerian Protocol - Intelligent agent-based development workflow templates",
  "main": "lib/installer.js",
  "bin": {
    "lerian-protocol": "bin/lerian-cli-wrapper.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LerianStudio/ai-prompts.git#lerian-protocol"
  },
  "keywords": [
    "lerian",
    "ai",
    "protocol",
    "workflow",
    "claude",
    "development",
    "agents"
  ],
  "license": "MIT",
  "dependencies": {
    "cfonts": "^3.3.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "node bin/lerian-protocol.js --help",
    "test:help": "node bin/lerian-protocol.js --help",
    "dev": "node bin/lerian-protocol.js",
    "start": "node bin/lerian-protocol.js",
    "install:local": "npm pack && echo 'Use: npm install /path/to/lerian-protocol-1.0.0.tgz in your project'",
    "link:global": "npm link",
    "lint": "eslint lib bin --ext .js",
    "lint:fix": "eslint lib bin --ext .js --fix",
    "lint:check": "eslint lib bin --ext .js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  }
}
