{
  "name": "lerian-protocol",
  "version": "0.1.0",
  "description": "Lerian Protocol - Intelligent agent-based development workflow templates",
  "main": "protocol-assets/tools/installer/index.js",
  "type": "commonjs",
  "bin": {
    "lerian-protocol": "bin/lerian-cli-wrapper.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LerianStudio/ai-prompts.git#lerian-protocol"
  },
  "keywords": [
    "lerian",
    "ai",
    "protocol",
    "workflow",
    "claude",
    "development",
    "agents"
  ],
  "license": "MIT",
  "dependencies": {
    "cfonts": "^3.3.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^11.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "pino": "^9.9.4",
    "pino-pretty": "^13.1.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "node bin/lerian-protocol.js --help",
    "test:help": "node bin/lerian-protocol.js --help",
    "dev": "node bin/lerian-protocol.js",
    "start": "node bin/lerian-protocol.js",
    "install:local": "npm pack && echo 'Use: npm install /path/to/lerian-protocol-1.0.0.tgz in your project'",
    "link:global": "npm link",
    "lint": "eslint protocol-assets bin --ext .js",
    "lint:fix": "eslint protocol-assets bin --ext .js --fix",
    "lint:check": "eslint protocol-assets bin --ext .js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "mcp:start": "./protocol-assets/infrastructure/scripts/start-services.sh",
    "mcp:start:dev": "./protocol-assets/infrastructure/scripts/start-services.sh --dev",
    "mcp:stop": "./protocol-assets/infrastructure/scripts/stop-services.sh",
    "mcp:status": "./protocol-assets/infrastructure/scripts/services-status.sh",
    "services:api": "cd protocol-assets/services/board-api && npm run dev",
    "services:ui": "cd protocol-assets/services/board-ui && npm run dev",
    "services:mcp": "cd protocol-assets/services/board-mcp && npm start",
    "services:test": "protocol-assets/tools/migration/test-services.sh",
    "validate": "protocol-assets/tools/migration/validate-structure.sh",
    "mcp:logs:service": "tail -f ./protocol-assets/infrastructure/data/logs/task-service.log",
    "mcp:logs:mcp": "tail -f ./protocol-assets/infrastructure/data/logs/board-mcp.log"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2"
  }
}
